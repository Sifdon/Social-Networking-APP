<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_marginTop="70dp"
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <ImageView
        android:src="@drawable/image"
        android:id="@+id/upload_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
         />
    </RelativeLayout>
    <TextView
        android:textSize="40dp"
        android:text="Text here"
        android:id="@+id/post_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000" />
    <TextView
        android:textSize="30dp"
        android:text="Title here"
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f42c2c" />
    <TextView
        android:textSize="20dp"
        android:text="Text here"
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#453fee" />
    <TextView
        android:textSize="15dp"
        android:text="Text here"
        android:id="@+id/post_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#86492b" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:src="@drawable/dislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_like"
        android:background="#fefdfd" />
    <TextView
        android:textSize="30dp"
        android:id="@+id/like_count"
        android:text="  Like Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
</LinearLayout>
    <TextView
        android:textSize="20dp"
        android:singleLine="true"
        android:text="_____________________________________________________________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.v7.widget.CardView>